		a = sc.nextInt();
		b = sc.nextInt();
		
		if (a>b) {
			multiplos = a%b;
		}
		else {
			multiplos = b%a;
			
		}
		
		if (multiplos == 0) {
			System.out.println(a + " e "+ b + " são números múltiplos");
		}
		else {
			System.out.println(a + " e " + b + " não são números múltiplos");
