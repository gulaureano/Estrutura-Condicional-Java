		int codigo;
		int quantidade;
		double preco;
		double total;
		
		codigo = sc.nextInt();
		quantidade = sc.nextInt();
		
		if (codigo == 1) {
			preco = 4.0;
			total = preco * quantidade;
			System.out.println("O total é de: R$" + total);
		}
		else {
			if (codigo == 2) {
				preco = 4.5;
				total = preco * quantidade;
				System.out.println("O total é de: R$" + total);
			}
			
			if (codigo == 3) {
				preco = 5.0;
				total = preco * quantidade;
